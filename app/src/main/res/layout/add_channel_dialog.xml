<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              xmlns:tools="http://schemas.android.com/tools" android:layout_width="wrap_content"
              android:layout_height="wrap_content">

    <TextView
            android:text="Add Channel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="0dp"
            tools:layout_editor_absoluteX="0dp" android:id="@+id/textView3"
            android:textSize="18sp" android:textAlignment="center" android:layout_marginBottom="16dp"
            android:layout_marginTop="26dp"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            tools:layout_editor_absoluteY="31dp" tools:layout_editor_absoluteX="16dp"
            android:id="@+id/addChannelNameTextField"
            android:hint="channel name" android:textColor="@android:color/darker_gray"
            android:layout_marginBottom="18dp" android:layout_marginLeft="18dp" android:layout_marginRight="18dp"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            tools:layout_editor_absoluteY="91dp" tools:layout_editor_absoluteX="16dp"
            android:id="@+id/addChannelDescTextField"
            android:hint="channel description" android:textColor="@android:color/darker_gray"
            android:layout_marginBottom="18dp" android:layout_marginLeft="18dp" android:layout_marginRight="18dp"/>
</LinearLayout>